<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/icon"
    tools:context=".PayActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/only"
        android:padding="@dimen/_15sdp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment"
            android:fontFamily="@font/fct"
            android:textSize="@dimen/_17sdp"
            android:textColor="@color/white"
            >
        </TextView>
        <TextView
            android:id="@+id/Gpay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="end"
            android:text="Gpay"
            android:textSize="@dimen/_15sdp"
            android:fontFamily="@font/fct"
            >
        </TextView>



    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_35sdp"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bocx"
            android:hint="name"
            android:id="@+id/name"
            android:padding="@dimen/_10sdp">

        </EditText>


        <EditText
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bocx"
            android:hint="Enter amount"
            android:id="@+id/amount"
            android:padding="@dimen/_10sdp">

        </EditText>

        <EditText
            android:id="@+id/cardno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_25sdp"
            android:hint="Card Number"
            android:background="@drawable/bocx"
            android:padding="@dimen/_10sdp"
            >
        </EditText>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_20sdp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expiry"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/only"
            android:textStyle="bold"
            android:padding="@dimen/_8sdp"
            >

        </TextView>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bocx"

            android:hint="mm/yyyy"
            android:minHeight="48dp"
            android:id="@+id/month"
            android:padding="@dimen/_8sdp"></EditText>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_100sdp"
            android:background="@drawable/bocx"
            android:gravity="center"
            android:hint="CVV"
            android:minHeight="48dp"
            android:inputType="numberPassword"
            android:padding="@dimen/_8sdp"
            android:id="@+id/cvv"
            android:textColor="@color/white"></EditText>

    </LinearLayout>

    <Button
        android:id="@+id/pays"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/_85sdp"
        android:layout_marginLeft="@dimen/_85sdp"
        android:layout_marginTop="@dimen/_23sdp"
        android:text="Pay"
        android:fontFamily="@font/fct"
        android:textSize="@dimen/_18sdp"
        android:textStyle="bold"
        >

    </Button>
</LinearLayout>